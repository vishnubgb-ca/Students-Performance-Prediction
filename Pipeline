pipeline{
    agent any

    stages{
        stage("Extract Data"){
            steps{
                sh 'python3 loading_data.py'
            }
        }
        stage("Data Analysis"){
            steps{
                sh 'python3 data_analysis.py'
            }
        }
        stage("Data Preprocessing"){
            steps{
                sh 'python3 data_preprocessing.py'
            }
        }
        stage("Data Visualization"){
            steps{
                sh 'python3 datavisualization.py'
            }
        }
        stage("Feature Engineering"){
            steps{
                sh 'python3 feature_engineering.py'
            }
        }
    }
    post{
       
        always {
            archiveArtifacts artifacts: 'transformer_fault_prediction.csv', onlyIfSuccessful: true
        }
            }
}
